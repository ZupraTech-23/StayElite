<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Hotel Dashboard</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/style/dashboard.css">
</head>
<body>
  <div class="container">
    <header>
      <div>
        <h1>StayElite â€” Dashboard</h1>
        <div class="sub">Overview of rooms, Staff & today's activity ...
          <p>Powered By @Zupra Technologies</p>
        </div>
        <div class="role"><%= user.role %></div>
      </div>
      <div class="actions">
        <% if (user.role==="Receptionist" || user.role==="Manager" || user.role==="Admin")   { %>
          <button id="openCheckin" class="btn"><a href="http://localhost:8080/checkin">Check in</a></button>
        <button id="openCheckout" class="btn"><a href="http://localhost:8080/checkout">Check out</a></button>
        <button class="btn">Guests Info</button>
        <button class="btn"><a href="http://localhost:8080/rooms">Add Room's</a></button>
        <button class="btn">Wifi info's</button>
        <button class="btn"><a href="http://localhost:8080/getwifi">Add Wifi</a></button>
        
        <%  } %>

        <% if (user.role==="Manager" || user.role==="Admin") { %>
          <button class="btn">Generate Invoice Bill</button>
        <button class="btn">Staff Attendance</button>

        
          
       <% } %>
       <form action="/logout" method="post">
          <button type="submit" class="btn">Log Out</button>
        </form>
        
        
        
      </div>
    </header>

    <section class="grid">
      <div class="card">
        <h3>Rooms Allotted</h3>
        <div id="roomsAlloted" class="big"><%= occupied %></div>
        <div class="small">Total rooms currently occupied</div>
      </div>
      <div class="card">
        <h3>Available Rooms</h3>
        <div id="availableRooms" class="big"><%= available %></div>
        <div class="small">Rooms free for booking</div>
      </div>
    </section>

    <div class="checkins">
      <div class="check">
        <h3>Today's Check-in</h3>
        <table>
          <thead>
            <tr>
              <th>Guest Name</th>
              <th>Rooms</th>
              <th>Room no</th>
            </tr>
          </thead>
          <tbody>
             <% if (result.length === 0) { %>
      <tr><td colspan="3">No check-ins today</td></tr>
    <% } else { %>
      <%   for(re of result)  { %>

        <tr>
          <td>
            <%= re.client_name %>
          </td>
          <td>
            <%= re.rooms %>
          </td>
          <td>
            <%= re.room_numbers %>
          </td>
        </tr>

       <% } %>
      
      
      
      
      <% } %>
          </tbody>
        </table>
      </div>

      <div class="check">
        <h3>Today's Check-out</h3>
        <table>
          <thead>
            <tr>
              <th>Guest Name</th>
              <th>Rooms</th>
              <th>Room no</th>
            </tr>
          </thead>
          <tbody>
             <% if (result4.length === 0) { %>
      <tr><td colspan="3">No check-outs today</td></tr>
    <% } else { %>
      <%   for(res of result4)  { %>

        <tr>
          <td>
            <%= res.client_name %>
          </td>
          <td>
            <%= res.rooms %>
          </td>
          <td>
            <%= res.room_numbers %>
          </td>
        </tr>

       <% } %>
      
      
      
      
      <% } %>
            
          </tbody>
        </table>
      </div>
    </div>
  </div>

  
</body>
</html>
